<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#1B1B1B"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cardView"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:id="@+id/title"
                    android:text="Question_Title"
                    android:fontFamily="@font/headland_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="#272727"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:paddingStart="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="RtlSymmetry">
                            <TextView
                                android:id="@+id/difficulty"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:text="Easy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:text=" | "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/acceptance"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:text="A/R : 50%"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
            <Space
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#5F6267"
                    android:id="@+id/share"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    app:cardCornerRadius="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true">
                    <LinearLayout
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingEnd="6dp"
                        android:orientation="horizontal">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_marginStart="4dp"
                            android:padding="4dp"
                            android:paddingEnd="8dp"
                            android:src="@drawable/baseline_share_24"
                            android:layout_width="35dp"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    android:layout_marginTop="4dp"
                   app:cardBackgroundColor="#272727"
                    android:id="@+id/gotoquestion"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    app:cardCornerRadius="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true">

                    <LinearLayout
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_marginStart="4dp"
                            android:padding="2dp"
                            android:src="@drawable/baseline_keyboard_arrow_right_24"
                            android:layout_width="35dp"
                            android:layout_height="40dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>